{
  "expo": {
    "name": "RopReng",
    "slug": "RopReng",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ropreng",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Cho phép RopReng truy cập vị trí để giao hàng chính xác tới bạn."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "package": "com.theliemteam.ropreng",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Cho phép RopReng truy cập vị trí để giao hàng chính xác tới bạn."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Ứng dụng cần camera để quét mã QR hoặc chụp ảnh đại diện."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Ứng dụng cần truy cập thư viện ảnh để tải ảnh lên.",
          "savePhotosPermission": "Ứng dụng cần quyền để lưu ảnh vào máy."
        }
      ],
      [
        "@maplibre/maplibre-react-native"
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
